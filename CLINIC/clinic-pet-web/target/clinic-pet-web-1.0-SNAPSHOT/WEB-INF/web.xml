<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <display-name>PetClinic</display-name>

    <description>
        This is a simple web application with a source code organization
        based on the recommendations of the Application Developer's Guide.
    </description>

    <servlet>
        <servlet-name>ClinicServlet</servlet-name>
        <servlet-class>ru.lesson.example.servlets.ClinicServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClinicServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserViewServlet</servlet-name>
        <servlet-class>ru.lesson.example.servlets.UserViewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserViewServlet</servlet-name>
        <url-pattern>/user/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserCreateServlet</servlet-name>
        <servlet-class>ru.lesson.example.servlets.UserCreateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserCreateServlet</servlet-name>
        <url-pattern>/user/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserEditServlet</servlet-name>
        <servlet-class>ru.lesson.example.servlets.UserEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserEditServlet</servlet-name>
        <url-pattern>/user/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>ru.lesson.example.servlets.UserDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientAddServlet</servlet-name>
        <servlet-class>ru.lesson.clinic.servlets.ClientAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientAddServlet</servlet-name>
        <url-pattern>/client/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientViewServlet</servlet-name>
        <servlet-class>ru.lesson.clinic.servlets.ClientViewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientViewServlet</servlet-name>
        <url-pattern>/client/view</url-pattern>
    </servlet-mapping>

</web-app>